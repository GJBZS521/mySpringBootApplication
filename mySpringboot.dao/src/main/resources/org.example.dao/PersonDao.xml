<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.dao.PersonDao">
    <resultMap id="userMap" type="org.example.vo.PersonVo">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="phone_number" property="phoneNumber"/>
    </resultMap>
    <select id="queryPersonInfoById" resultMap="userMap">
        SELECT id, name, phone_number FROM user WHERE id = #{id}
    </select>

    <select id="queryPersonInfoByName" resultMap="userMap">
        SELECT id, name, phone_number FROM user where name = #{name};
    </select>

    <select id="queryAllPersonInfo" resultMap="userMap">
        SELECT id, name, phone_number FROM user;
    </select>
</mapper>